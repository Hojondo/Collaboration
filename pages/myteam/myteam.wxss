/* pages/myteam/myteam.wxss */
.header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 36rpx;
    color: #000000;
    background: #ffffff;
}
.headicon{
    width: 40rpx;
    margin: 20rpx 50rpx;
}
.li{
    display: flex;
    width: 90%;
    margin: 10pt auto;
}
.tab-cell{
    font-size: 28rpx;
    color: #353535;
    border-bottom: 0;
}
.tab-cell:last-child .name{
    border-bottom: 0;
}
.avatar{
    margin-right: 20rpx;
    align-self: center;
}

.name{
    flex-grow: 1;
    line-height: 72rpx;
    border-bottom: solid 1px #DDDDDD;
}
button{
    margin: 20rpx 50rpx 0;
    background: #ffffff;
    border-radius: 0;
    font-size: 28rpx;
    color: #5C8CB4;
    border-color: #5C8CB4;
}
