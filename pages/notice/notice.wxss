/* pages/notice/notice.wxss */
.li{
    background: #fff;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    /*align-items:center;*/
    align-items: start;
    position:relative;
    padding-bottom: 48rpx;
}
.avatar{
    margin: 0 22rpx;
}
.content{
    -webkit-box-flex:1;
    -webkit-flex:1;
    flex:1;
    min-width:0;
    padding: 0 20rpx 20rpx 0;
    border-bottom: solid 1px #DDDDDD;
    font-size: 28rpx;
}
.time{
    font-size: 22rpx;
    color: #B2B2B2;
}
.title{
    color: #353535;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    word-break:break-all;
}
.desc{
    color: #888888;
}
