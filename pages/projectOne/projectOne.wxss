/* pages/projectOne/projectOne.wxss */
.tab{
    position:relative;
    display: flex;
    flex-direction: column;
    height:100%;
}
/* top start*/
.topbar{
    flex-shrink: 0;
    justify-content: space-between;
    align-items:center;
    background: #ffffff;
    font-size: 32rpx;
    color: #888888;
    border: 0 solid #DDDDDD;
    border-bottom-width: 1rpx;

    display: flex;
    padding: 0 20rpx;
}
.more{
    width: 60rpx;
}
.custom-navbar{
    padding:10px 0;
    width: 50%;
    border: 0;
    display:-webkit-box;
    display:-webkit-flex;
    z-index:500;
    top:0;
}
.weui-navbar__item{
    background: none;
    padding: 0;
}
.weui-bar__item_on .weui-navbar__title{
    color: #5C8CB4;
    border-bottom: 6rpx solid #5C8CB4;
}
/* top end*/
/* content start*/
.tab_content{
    width: 100%;
    background:#F4F4F4;
    overflow: auto;
}
.newList{
    background: #F4F4F4;
    border-radius: 0;
    font-size: 28rpx;
    color: #B2B2B2;
}
.part_white{
    background: #FFFFFF;
}
.listName{
    font-weight: bold;
    font-size: 32rpx;
    color: #000000;
    margin-left: 32rpx;
    border: 0 solid #DDDDDD;
    padding: 32rpx 20rpx 0 0;
}
.List{
    display: flex;
    align-items: flex-start;
    margin: 32rpx 0;
    font-size: 32rpx;
    color: #353535;
}
.List:first-child{
    margin: 0 0 32rpx;
    padding-top: 32rpx;
}  /*小程序的坑：margin-top不能撑起父元素*/
.List:last-child{
    margin: 32rpx 0 0;
    padding-bottom: 32rpx;
}  /*小程序的坑：margin-bottom不能撑起父元素*/
.done{
    font-size: 24rpx;
    line-height: 30rpx;
    height: 30rpx;
    margin-top: 10rpx;
    padding: 0 5rpx;
    border-radius: 5rpx;
    background: #60BF40;
    color: #DFF2D9;
}
.projectDetail:nth-child(2){
    margin: 0 20rpx;
}
.projectInfo{
    font-size: 26rpx;
    color: #888888;
}
.newliP{
    font-size: 26rpx;
    color: #5C8CB4;
}
.newliP:last-child{
    padding-bottom: 32rpx;
}
.doneBtn{
    font-size: 32rpx;
    color: #000000;
    background: #FFFFFF;
}
.newli,.newModal,.uploadImg{
    display: inline-block;
    position: fixed;
    bottom: 20rpx;
    right: 20rpx;
}
.footerImg{
    width: 128rpx;
    border-radius: 50%;
    vertical-align: middle;
}
/* content end*/
/*文件content start*/
.typeImg{
    width: 80rpx;
    margin-right: 40rpx;
}
.file_grow{
    flex-grow: 1;
    font-size: 28rpx;
}

.file_title{
    color: #353535;
}
.file_owner{
    float: left;
    display: flex;
    color: #888888;
    align-items: center;
    flex-grow: 0;
    line-height: 28rpx;
}
.ownerAvatar{
    width: 30rpx;
    border-radius: 50%;
    vertical-align: middle
}
.file_size,.file_time{
    display: inline-block;
    margin: 0 1em;
}
.file_size,.file_time{
    float: right;
    color: #b2b2b2;
    font-size: 22rpx;
}

/*文件content end*/
.weui-cell__ft_in-access{
    font-size: 26rpx;
    color: #888888;
}
button:after{
    border: none;
}
