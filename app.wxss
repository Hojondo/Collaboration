/**app.wxss**/
@import "./pages/common/lib/weui/app.wxss/";
/* 全局样式覆盖 start */
page{
  height: 100%;
  width: 100%;
  background: #F4F4F4;
}
button::after{
  /*border: none; !*去除button的默认边框*!*/
}
open-data[type="userAvatarUrl"] {
  display: block;/* open-data 的 display 默认值是 inline ，需要改为 inline-block 或 block 才能控制宽高 */
  overflow: hidden;/* 设置 overflow 为 hidden 才能设置圆角 */
}
navigator image{
  vertical-align: middle; /*不知道为什么navigator就是比image多8px，为了居中 手动设置*/
}
.container{
  width: 100%;
}
.panel{
  display: flex;
  justify-content: center;
  font-size: 32rpx;
  padding: 0 32rpx;
  background: #ffffff;
}
.part{
  margin-top: 20rpx;
  background: #ffffff;
}
.part:first-child{margin-top:0}
.padBoth{
  padding: 0 20rpx 0 32rpx;
}
.noBorder{
  border: 0!important;
}
text.end{
  display: flex;
  justify-content: center;
  font-size: 22rpx;
  color: #B2B2B2;
  padding: 32rpx 0;
}
image.avatar,image.icon{
  width: 72rpx;
  vertical-align:middle;
  border-radius: 50%;
}
.tab-cell{
  font-size: 32rpx;
  color: #000000;
  display: flex;
  justify-content: space-between;
  align-items:center;
  padding: 0 20rpx 21rpx 0;/*margin有毛病，不能撑起父元素*/
  margin: 21rpx 0 0 32rpx;
  vertical-align: middle;
  border-bottom: 1px solid #DDDDDD;
}
.tab-cell:last-child{
  border-bottom: 0;
}
.tab-cell:first-child{
  margin: 0 0 0 32rpx;
  padding: 21rpx 20rpx 21rpx 0;
}
.flexGrow{
  flex-grow: 1;
}
/* 全局样式覆盖 end */
/* modal样式 start */
.modal-input{
  width: 90%;
  /*margin: 20px auto;*/
  padding: 20rpx;
  background: #ffffff;
  font-size: 32rpx;
  color: #353535;
}
.modal-label{
  width: 100%;
  margin: 20rpx;
}
.modal-label text{
  display: block;
  width: 100%;
  margin: 0 auto;
}
.modal-content .tab-cell{
  padding: 20rpx;
  margin: 0;
}
/* modal样式 end */
